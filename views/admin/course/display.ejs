<%-include('../layout/header.ejs')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper" style="height: 200%; margin-top: 5%;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Register Student</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <!-- <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Starter Page</li>
            </ol> -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
        <div class="card">
          <div class="card-header">
            <!-- <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addstudent">
              Add Student
            </button> -->
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>status</th>
                  <th>Comment</th>
                  <th></th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% d.forEach((item,index)=>{%>
                  <tr>
                    <td>
                      <%= index+1 %>
                    </td>
                    <td>
                      <%= item.name %>
                    </td>
                    <td>
                      <%= item.email %>
                    </td>
                    <td>
                      <%= item.phone %>
                    </td>
                    <td>
                      <%= item.status %>
                    </td>
                    <td>
                      <%= item.Comment %>
                    </td>
                    <form action="/admin/statusupdate/<%=item._id%>">
                      <input type="text" name="name" value="<%=item.name%>"> />
                      <input type="text">
                      <input type="text" name="name" value="<%=item.email%>"> />
                      <textarea name="Comment" class="form-control"></textarea>
                      <button name="status" value="approved" class="btn btn-info">Approved</button>
                      <button>
                        name="status"
                      </button>
                    </form>


                    <td>
                      <a href="/course/view/<%=item._id%>" class="btn btn-info btn-sm ">View</a>
                      <a href="/course/edit/<%=item._id%>" class="btn btn-success btn-sm">Edit</a>
                      <a href="/course/delete/<%=item._id%>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                  </tr>
                  <% }) %>
              </tbody>
              <tfoot>
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>status</th>
                    <th>Comment</th>
                    <th>Action</th>
                  </tr>
                </thead>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->





  <%-include('../layout/footer.ejs')%>